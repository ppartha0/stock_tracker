<div class="page-header">
  <h1>
    Stocks
    <a href="/stocks/new" class="btn btn-lg btn-success">Add New Stock</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Ticker</th>
        <th>Tracked Price</th>
        <th>Portfolio</th>
        <th>Actions</th>
      </tr>

      <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.ticker %></td>
        <td><%= stock.price %></td>
        <td><a ref="/portfolios/<%= stock.portfolio_id %>"><%= Portfolio.find(stock.portfolio_id).portname %></a></td>
        <td>
          <a href="/stocks/<%= stock.id %>" class="btn btn-primary">Details</a>
          <a href="/stocks/<%= stock.id %>/edit" class="btn btn-info">Edit</a>
          <a href="/delete_stock/<%= stock.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

