<div class="page-header">
  <h1>
    <%= User.find(current_user.id).username.capitalize %>'s Portfolios
    <a href="/portfolios/new" class="btn btn-lg btn-success">Create A New Portfolio</a>
    <a href="/users/notify" class="btn btn-lg btn-info">Send Email</a>
  </h1>  
</div>


<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>My Portfolios</th>
        <th>Actions</th>
      </tr>
      
      <% @portfolios.each do |portfolio| %>
        <tr>
          <td><a href="/portfolios/<%= portfolio.id %>"><%= portfolio.portname %></a></td>
          <td>
            <a href="/portfolios/<%= portfolio.id %>" class="btn btn-primary">Details</a>
            <a href="/portfolios/<%= portfolio.id %>/edit" class="btn btn-info">Edit</a>
            <a href="/delete_portfolio/<%= portfolio.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          </td>
        </tr>
        <% end %>
      </table>
  </div>
</div>

<div class="container">
  <h3>Bloomberg Top Ten</h3>
  <div class="list-group">
  <% @parsed_data["articles"].each do |article|%>
    <a href="<%= article["url"] %>" class="list-group-item">
      <h4 class="list-group-item-heading"><%= article["title"] %></h4>
      <p class="list-group-item-text"><%= article["description"] %></p>
    </a>
  <% end %>
  <h6>Powered by <a href="https://newsapi.org">NewsAPI.org</a></h6>
  </div>  
</div>

