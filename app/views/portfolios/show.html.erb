<div class="page-header">
  <h3><%= @portfolio.portname %></h3>
</div>

<div class="container">
  <h4>Stocks you are currently tracking</h4>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Stock Ticker</th>
        <th>Tracked Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @portfolio.stocks.each do |stock| %>
      <tr>
        <td><a href="/stocks/<%= stock.id %>"><%= stock.ticker %></a></td>
        <td><%= stock.price %></td>
        <td>
          <a href="/stocks/<%= stock.id %>" class="btn btn-primary">Details</a>
          <a href="/stocks/<%= stock.id %>/edit" class="btn btn-info">Edit</a>
          <a href="/delete_stock/<%= stock.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    
      <a href="/portfolios" class="btn btn-primary">
        Back To My Portfolios
      </a>
      <a href="/stocks/new" class="btn btn-info">
        Add Stock To Portfolio
      </a>

    
  </div>
</div>
